<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.library.aimo.widget.CameraContainer
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:openBackCamera="false"
        app:scaleType="centerCrop" />


    <com.library.aimo.widget.ClipRelativeLayout
        android:id="@+id/rl_layout_clip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <View
            android:id="@+id/face_view_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_progress" />


    </com.library.aimo.widget.ClipRelativeLayout>

</FrameLayout>