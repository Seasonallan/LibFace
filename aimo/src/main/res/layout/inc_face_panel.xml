<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="320dp">

    <com.library.aimo.widget.CameraContainer
        android:id="@+id/surface"
        android:layout_height="320dp"
        android:layout_width="match_parent"
        app:openBackCamera="false"
        app:scaleType="centerInside" />


    <com.library.aimo.widget.ClipRelativeLayout
        android:id="@+id/rl_layout_clip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="#0C1529">

        <View
            android:id="@+id/face_view_loading"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_progress" />


    </com.library.aimo.widget.ClipRelativeLayout>

</FrameLayout>